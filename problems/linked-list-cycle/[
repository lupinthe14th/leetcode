package linkedlistcycle

import "testing"

var cases = []struct {
	id    int
	input []int
	want  bool
}{
	{id: 1, input: []int{3, 2, 0, -4}, want: true},
}

func TestHasCycle(t *testing.T) {
	for _, tt := range cases {
		t.Run(fmt.Sprint(tt.id),func(t *testing.T){
			got := hasCycle(intSlice2ListNode(tt.input))
			if got != tt.want {
				t.Errorf("",got,tt.want)
			}
	}
}
